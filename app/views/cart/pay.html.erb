<div class="container">
  <h2>Successfully paid</h2>
  <p>Date: <%=Time.now %></p>

  <% if(not current_user.name.nil?) %>
    <p>buyer: <%=current_user.name %></p>
  <%else %>
  <p>buyer: <%=current_user.email %></p>
  <%end %>

  <table class="table">
    <thead>
    <tr>
      <th>Event</th>
      <th>Price</th>
    </tr>
    </thead>

    <tbody>
    <% @paid_tickets.each do |user_ticket| %>
      <tr>
        <td><%= user_ticket.ticket.event.name %></td>
        <td><%= user_ticket.ticket.price %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p>Total: <%= @total %></p>
</div>