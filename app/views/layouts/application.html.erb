<!DOCTYPE html>
<html>
<head>
  <title>Lab4Assignment</title>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<body>
<div>
  <nav id="navbar-app" class="navbar navbar-expand-lg bg-light justify-content-between fixed-top">
    <ul class = "navbar-nav">
      <li class="nav-item">
        <%if can? :manage, Event %>
          <%#=link_to "Events Management", U %>
          <a href="<%= administration_index_path %>">Administration</a>
        <% end %>
      </li>
<!--      <li class="nav-item">-->
        <%#if can? :manage, Ticket %>
          <%#=link_to "Ticket management", ticket_path %>
        <%# end %>
<!--      </li>-->
    </ul>

    <div class="row-10"></div>
    <% if user_signed_in? %>
      <div class="row mx-2">
        <div class="nav-item">
          <form class="form-inline">
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary") %>
          </form>
        </div>
      </div>
    <% end %>
  </nav>
</div>
<p id="notice"><%= notice %></p>
<%= yield %>
</body>
</html>
